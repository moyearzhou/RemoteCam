<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@android:color/background_dark"
    android:minHeight="56dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/lv_iso_setter"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">

        <TextView
            style="@style/TextAppearance.AppCompat.Caption"
            android:id="@+id/txt_iso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="@color/colorMain"
            tools:text="3200">
        </TextView>

        <TextView
            style="@style/SmallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_params"
            android:textColor="@color/colorMain"
            android:text="ISO" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lv_shutter_speed_setter"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_shutter"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="@color/colorMain"
            tools:text="1/125">
        </TextView>

        <TextView
            style="@style/SmallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_params"
            android:textColor="@color/colorMain"
            android:text="SHUTTER" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lv_aperture_setter"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_aperture"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="@color/colorMain"
            tools:text="f 1.8">
        </TextView>

        <TextView
            style="@style/SmallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_params"
            android:textColor="@color/colorMain"
            android:text="APERTURE" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lv_ev_setter"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_ev"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="@color/colorMain"
            tools:text="0.30">
        </TextView>

        <TextView
            style="@style/SmallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_params"
            android:textColor="@color/colorMain"
            android:text="EV" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lv_focus_setter"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_focus"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="@color/colorMain"
            tools:text="1.56">
        </TextView>

        <TextView
            style="@style/SmallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_params"
            android:textColor="@color/colorMain"
            android:text="FOCUS" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lv_white_balance_setter"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_white_balance"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="@color/colorMain"
            tools:text="5400">
        </TextView>

        <TextView
            style="@style/SmallText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_params"
            android:textColor="@color/colorMain"
            android:text="WB" />

    </LinearLayout>


</LinearLayout>